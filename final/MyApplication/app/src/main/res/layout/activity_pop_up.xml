<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FD5D5D"
    tools:context=".ViewStatisticsPopUpActivity">

    <ScrollView
        android:id="@+id/scrollView4"
        style="@android:style/Widget.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbarSize="4dp"
        android:scrollbarThumbVertical="@drawable/scrollbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/overall"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/molesHit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/moleAllTimeHigh"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mazeCompleted"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numMazeItems"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/streak"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currency"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/purchase"
                android:layout_width="131dp"
                android:layout_height="80dp"

                android:onClick="buyCurrency"
                android:text="@string/BuyGems" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>